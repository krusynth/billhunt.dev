---
title : USAJobs
permalink: /usajobs.xml
---
{%- assign items = "" | split:"/" -%}
{% assign now = 'now' | date: '%s' %}

{%- for post in site.data.usajobs  %}
  {% assign closes = post.closes | date: '%s' %}

  {% if closes == nil or closes == '' or closes > now  %}
    {% assign post = post | setval: 'category', 'Jobs' %}
    {% assign post = post | setval: 'link', post.url %}
    {% if post.remote %}
      {% assign title = post.title | append: ' (Remote)' %}
      {% assign post = post | setval: 'title', title %}
    {% endif %}

    {% assign content = post.content %}
    {% for job in site.data.jobs %}
      {% if job.url contains post.id %}
        {% assign content = job.content %}
      {% endif %}
    {% endfor %}

    {% if post.closes %}
      {% assign post_closes = post.closes | date: site.date_format %}
      {% assign content = content | append: ' <p>Closes ' | append: post_closes | append: </p>' %}
    {% endif %}

    {% capture afterwards %}<p><a href="{{ post.link }}">Check it out!</a></p>{% endcapture %}
    {% assign content = content | append: afterwards %}

    {% assign post = post | setval: 'content', content %}

    {% assign post = post | setval: 'date', post.posted %}

    {% assign items = items | push: post %}
  {% endif %}
{% endfor -%}

{% assign items = items | sort: 'date' | reverse %}

{%- include feed.xml items=items %}
