---
title : Atom Feed
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text" xml:lang="en">{{ site.title }}</title>
  <link type="application/atom+xml" href="{{ site.url }}/atom.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  <updated>{{ site.time | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
  </author>
  <rights type="text">All content copyright Â© {{ site.author.name }}. All rights reserved.</rights>
  {% assign items = site.posts | concat: site.data.reposts | concat: site.data.jobs | sort: "date" | reverse -%}
  {%- for post in items limit:site.feed.posts_limit -%}

    {%- assign url = post.url | replace: '&', '&amp;'-%}
    {%- if post.id -%}
      {%- assign url = url | prepend: site.url -%}
      {%- assign category = post.category | default:'post' -%}
    {%- elsif post.closes -%}
      {%- assign category = 'job' -%}
    {%- else -%}
      {%- assign category = 'recommended' -%}
    {%- endif -%}

  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <link rel="alternate" type="text/html" href="{{ url }}" />
    <published>{{ post.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ url }}</id>
    <content type="html">{{ post.content | markdownify | strip | xml_escape }}
      {%- if post.closes %}&lt;p&gt;Closes {{ post.closes | date: date_format }}.&lt;/p&gt;{% endif -%}
    </content>
    <category>{{ category }}</category>
  </entry>
  {% endfor %}
</feed>